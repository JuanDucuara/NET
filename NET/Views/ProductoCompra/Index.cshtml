@model IEnumerable<NET.Models.producto_compra>

@{
    ViewBag.Title = "ProductoCompra-Index";
}

<h2>Producto - Compra</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                ID Compra:
            </th>
            <th>
                ID Producto:
            </th>
            <th>
                Cantidad:
            </th>
            <th></th>
        </tr>
    </thead>
   

@foreach (var item in Model) {
<tbody>
    <tr>
        <td>
            @NET.Controllers.ProductoCompraController.Nombrecompra(item.id_compra)
        </td>
        <td>
            @NET.Controllers.ProductoCompraController.NombreProductos(item.id_producto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.id })
        </td>
    </tr>
</tbody>
   
}

</table>
