@model NET.Models.producto_compra

@{
    ViewBag.Title = "ProductoCompra-Detalles";
}

<h2>Detalles</h2>

<div>
  
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ID Compra: 
        </dt>

        <dd>
            @NET.Controllers.ProductoCompraController.Nombrecompra(Model.id_compra)
        </dd>

        <dt>
            ID Producto: 
        </dt>

        <dd>
            @NET.Controllers.ProductoCompraController.NombreProductos(Model.id_producto)
        </dd>

        <dt>
            Cantidad: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Volver a lista", "Index")
</p>
