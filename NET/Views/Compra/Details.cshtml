@model NET.Models.compra

@{
    ViewBag.Title = "Compra-Detalles";
}

<h2>Detalles</h2>

<div>
 
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Fecha:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>

        <dt>
            Total:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.total)
        </dd>

        <dt>
            ID Usuario:
        </dt>

        <dd>
            @NET.Controllers.CompraController.NombreUsuario(Model.id_usuario)
        </dd>

        <dt>
            ID Cliente:
        </dt>

        <dd>
            @NET.Controllers.CompraController.NombreCliente(Model.id_cliente)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Volver a lista", "Index")
</p>
