@model NET.Models.producto

@{
    ViewBag.Title = "Producto-Detalles";
}

<h2>Detalles</h2>

<div>
    <h4>producto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            Precio_Unitario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.percio_unitario)
        </dd>

        <dt>
            Descripcion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>

        <dt>
            Cantidad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

        <dt>
            Proveedor_Nombre
        </dt>

        <dd>
            @NET.Controllers.ProductoController.NombreProveedor(Model.id_proveedor)
        </dd>
        <dt>
            Imagen Producto
        </dt>

        <dd>
            <img class="img-responsive" src="@Url.Content("~/" + ViewBag.imagen)" alt="Image" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Volver a lista", "Index")
</p>
