@model IEnumerable<NET.Models.producto>

@{
    ViewBag.Title = "Lista-Producto";
}

<h2>Lista de Productos</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Precio_Unitario
            </th>
            <th>
                Descripcion
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Proveedor
            </th>
            <th></th>
        </tr>
    </thead>
   

@foreach (var item in Model) {
<tbody>
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.percio_unitario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad)
        </td>
        <td>
            @NET.Controllers.ProductoController.NombreProveedor(item.id_proveedor)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
        </td>
    </tr>
</tbody>
   
}

</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Esta seguro de eliminar?')) {
                event.preventDefault();
            }
        })

    </script>
    }
